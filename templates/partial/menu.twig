{% if menu %}
	<ul id="navigation" class="navbar-nav mt-2 mt-lg-0" role="menu">
		{% for item in menu.items %}

			{% if item.children %}
				<li class="nav-item dropdown{{ item.classes | join(' ') }}">
					<a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="{{item.get_link}}">{{item.title}}
					</a>

					<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
						{% for child in item.get_children %}
							<li>
								<a class="dropdown-item" href="{{child.get_link}}">{{child.title}}</a>
							</li>
						{% endfor %}
					</ul>
				</li>
			{% else %}
				<li class="nav-item{{ item.classes | join(' ') }}">
					<a class="nav-link" target="{{ item.target }}" href="{{ item.link }}">{{ item.title }}</a>
				</li>
			{% endif %}
		{% endfor %}
	</ul>
{% endif %}
